#:kivy 1.0.9

#Node for mind map view
<Node@Button>:
    size_hint: None, None
    text_size: 150, None
    halign: 'center'
    size: self.texture_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    background_normal: ''
    background_color: [1,1,1,0] if self.state == 'normal' else [1,1,1,1]
#    text_color: [1,1,1,1]
    canvas.before:
        Color:
            rgb: (.5,.5,.5)
        Ellipse:
            pos: self.pos[0] - 10, self.pos[1] - 10
            size: self.size[0] + 20, self.size[1] + 20


<MindMap>:
    canvas:
#        Rectangle:
#            pos: self.center_x - 5, 0
#            size: 10, self.height


#    TextInput:
#        center: self.parent.center


<TextInput>:
    size: 100, 100
    canvas:
        Ellipse:
            pos: self.pos
            size: 200, 200
